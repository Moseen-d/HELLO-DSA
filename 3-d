#include<stdio.h>
#include<stdlib.h>
#define MAX 4
int stack[MAX];
int i,item,top=-1;

void push()
{
    if(top == MAX-1){
        printf("full");
    }
    else{
            printf("\nenter the ele :");
            scanf("%d",&item);
            top++;
            stack[top]=item;
    }
}
void pop()
{
    if(top== -1)
    {
        printf("empty");
    }
    else
    {
        printf("item is deleted %d",stack[top]);
        top--;
    }
}
void dis()
{
    if(top == -1)
    {
        printf("empty");
    }
    else
    {
        printf("data is ");
        for(i=top;i>=0;i--)
        {
            printf("%d\n",stack[i]);
        }
    }
}
void pal()
{
    int i;

    if(top == -1)
    {
        printf("Stack is Empty");
        return;
    }

    for(i = 0; i <= top/2; i++)
    {
        if(stack[i] != stack[top - i])
        {
            printf("not palindrom");
            return;
        }
    }
    printf("palindrom");
}

int main()
{
    int ch;
    do
    {
        printf("\n1.push 2.pop 3.display 4.pali 5.exit");
        printf("\nenetr your chouce ");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:push();break;
            case 2:pop();break;
            case 3:dis();break;
            case 4:pal();break;
            case 5:exit(0);
        }
    }while(ch!=5);
}
