#include <stdio.h>
#include <stdlib.h>

#define DAYS 7

struct Day
{
    char *dayName;
    int date;
    char *activity;
};

int main()
{
    struct Day *calendar;
    int i;
    char ch;

    /* Step 1: Create dynamic array of 7 days */
    calendar = (struct Day *)malloc(DAYS * sizeof(struct Day));

    /* Step 2: Allocate memory for day name and activity */
    for(i = 0; i < DAYS; i++)
    {
        calendar[i].dayName = (char *)malloc(20 * sizeof(char));
        calendar[i].activity = (char *)malloc(100 * sizeof(char));
        calendar[i].date = 0;
    }

    /* Step 3: Read data */
    for(i = 0; i < DAYS; i++)
    {
        printf("\nEnter details for Day %d (y/n): ", i + 1);
        scanf(" %c", &ch);

        if(ch == 'n' || ch == 'N')
            continue;

        printf("Day Name: ");
        scanf("%s", calendar[i].dayName);

        printf("Date: ");
        scanf("%d", &calendar[i].date);

        printf("Activity: ");
        scanf(" %[^\n]", calendar[i].activity);
    }

    /* Step 4: Display weekly activity report */
    printf("\n----- Weekly Activity Report -----\n");

    for(i = 0; i < DAYS; i++)
    {
        printf("\nDay %d\n", i + 1);

        if(calendar[i].date == 0)
        {
            printf("No Activity\n");
        }
        else
        {
            printf("Day Name : %s\n", calendar[i].dayName);
            printf("Date     : %d\n", calendar[i].date);
            printf("Activity : %s\n", calendar[i].activity);
        }
    }

    return 0;
}
